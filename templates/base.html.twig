                    </ul>
                </li>
            </ul>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="{{path('app_profil')}}">Profil</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="{{path('app_logout')}}">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">Menu</div>

                            <a class="nav-link" href="{{ path('app_home') }}">
                            <div class="sb-nav-link-icon"><i class="fas fa-home-alt"></i></div>
                                Accueil
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a class="nav-link" href="{{ path('app_categories') }}">
                            <div class="sb-nav-link-icon"><i class="fas fa-clipboard"></i></div>
                                Catégories
                            </a>

                            <a class="nav-link" href="{{ path('app_modules') }}">
                            <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                                Modules
                            </a>
                            {% endif %}
                            <a class="nav-link" href="{{ path('app_formation') }}">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-reader"></i></div>
                                Formations
                            </a>

                            <a class="nav-link" href="{{ path('app_interns') }}">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-people-group"></i></div>
                                Stagiaires
                            </a>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Logged in as:</div>
                        {{app.user.firstname}} {{app.user.lastname}}
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
             <main>
             <div class="container-fluid p-4">
                 {% block body %}{% endblock %}
               </div>
              </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; IK PROD</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="{{asset('dep/js/scripts.js')}}"></script>
        {% block javascripts %}
